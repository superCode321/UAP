<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>

<script>
	$(document).ready(function (){
		var words = ['apple','orange','banana'];
		var build = function () {
			var article = $('#article');
			for (var i = 0; typeof(words[i]) != 'undefined'; ++i){
				var node = $('<div>')
				.addClass('node')
				//.addClass('w_'+words[i])
				//.attr('id','node_'+i)
				.html(words[i]);

				article.append(node);
			}

			$('div.node').click(function() {
			   var ele = $(this).html();
			   $.post('http://localhost:3000/articles', function(data) {
  					alert("Data Loaded");
				});
			   alert(ele);
			   $(this).tooltip();
			});

		};

		build();

	})();

