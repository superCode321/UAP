<h1>Orders From Customers</h1>

<table border='1'>
  <tr>
    <th>Item Name</th>
    <th>Price</th>
    <th>Buyer Name</th>
    <th>Quantity</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.price.round %></td>
    <td><%= item.buyer %></td>
    <td><%= item.count %></td>
<td><%= link_to 'Destroy', item, method: :delete, data: {confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

